<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.zero.hkdnews.myview.TitleBar
        android:id="@+id/share_upload_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/share_upload_take_photo_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="拍照"/>
        <Button
            android:layout_marginLeft="10dp"
            android:id="@+id/share_upload_use_photo_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/round_button"
            android:text="相册"/>

    </LinearLayout>

    <TextView
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="您的图片："
        android:textColor="@color/font_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/share_upload_imageview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="gone"
        />

    <EditText
        android:id="@+id/share_upload_edit_text"
        android:hint="输入分享的内容"
        android:gravity="top"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:background="@color/white"
        />

    <Button
        android:id="@+id/share_upload_ok_btn"
        android:layout_margin="5dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击上传" />

</LinearLayout>
