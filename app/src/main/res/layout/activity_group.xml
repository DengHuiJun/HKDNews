<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/custom_theme_primary">

        <ImageView
            android:padding="5dp"
            android:id="@+id/group_header_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@mipmap/news_detail_top_back"
            android:clickable="true" />

        <TextView
            android:id="@+id/group_header_title"
            style="@style/detail_head_title"
            android:layout_gravity="center"
            android:textColor="@color/PETER_RIVER"
            android:text="群组列表" />

        <ImageView
            android:padding="5dp"
            android:id="@+id/group_header_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:background="@mipmap/ic_add_white"
            android:clickable="true" />




    </LinearLayout>



    <com.quentindommerc.superlistview.SuperListview
        xmlns:superlistview="http://schemas.android.com/apk/res-auto"
        android:id="@+id/group_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        superlistview:superlv__listClipToPadding="false"
        superlistview:superlv__listDivider="@android:color/transparent"
        superlistview:superlv__listDividerHeight="10dp"
        superlistview:superlv__listPadding="10dp"
        superlistview:superlv__empty="@layout/wait_ui"
        superlistview:superlv__scrollbarStyle="outsideOverlay" >
    </com.quentindommerc.superlistview.SuperListview>



</LinearLayout>
