<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_detail_footer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_bottom_bar"
    android:gravity="center_horizontal"
    android:background="@color/CLOUDS">

    <ViewSwitcher
        android:id="@+id/news_detail_foot_view_switcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/news_detail_comment"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/news_detail_comment_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/news_detail_bottom_comment" />

                <TextView
                    android:id="@+id/news_detail_comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="评论"
                    android:textColor="@color/font_gray" />

            </LinearLayout>

        </RelativeLayout>

            <RelativeLayout
                android:clickable="true"
                android:id="@+id/news_detail_comment_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/news_comment_detail_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/news_detail_bottom_content" />

                    <TextView
                        android:id="@+id/news_comment_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/news_detail_detail"
                        android:textColor="@color/font_gray" />

                </LinearLayout>

            </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:id="@+id/news_detail_comment_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/news_comment_list_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/news_detail_bottom_comment_list" />

                <TextView
                    android:id="@+id/news_comment_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/news_detail_list"
                    android:textColor="@color/font_gray" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout

            android:clickable="true"
            android:id="@+id/news_detail_love"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/news_detail_love_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/news_detail_bottom_love" />

                <TextView
                    android:id="@+id/news_detail_love_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/news_detail_love"
                    android:textColor="@color/font_gray" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout

            android:clickable="true"
            android:id="@+id/news_detail_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/news_detail_share_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/news_share_transmit" />

                <TextView
                    android:id="@+id/news_detail_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/news_detail_share"
                    android:textColor="@color/font_gray" />
            </LinearLayout>

        </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/news_detail_foot_editer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:autoLink="web|email"
                android:gravity="top"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/news_detail_foot_comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/font_gray"
                android:textSize="15dp"
                android:text="评论"
                />

        </LinearLayout>
    </ViewSwitcher>
</LinearLayout>
