<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="@string/tag_home_pager_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/home_pager_tabs"
        app:tabSelectedTextColor="@color/big_title"
        app:tabTextColor="@color/font_gray"
        app:tabIndicatorColor="@color/select_ic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_pager_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
