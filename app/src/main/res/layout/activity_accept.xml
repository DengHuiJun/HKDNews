<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".groupmsg.AcceptActivity">

    <com.zero.hkdnews.myview.TitleBar
        android:id="@+id/accept_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/accept_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="5dp"
        android:minHeight="100dp"
        android:background="@color/color_100"
        android:textColor="@color/font_gray"
        android:text="测试字幕"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/accept_no_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:text="拒绝"
            android:textColor="@color/font_gray"
            />

        <Button
            android:id="@+id/accept_yes_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/round_button"
            android:text="同意"
            android:textColor="@color/font_gray"
            />

    </LinearLayout>

</LinearLayout>
